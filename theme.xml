<?xml version="1.0" encoding="UTF-8"?>
<theme defaultView="CoinOps Details">
   <formatVersion>4</formatVersion>
   <include>./config.xml</include>
   <include>./$system/custom.xml</include>
   <include subset="MainBGColor" name="Default" displayName="${default}"/>
   <include subset="MainBGColor" name="Green" displayName="${huegreen}">./colorsets/green.xml</include>
   <include subset="MainBGColor" name="Red" displayName="${huered}">./colorsets/red.xml</include>
   <include subset="MainBGColor" name="Blue" displayName="${hueblue}">./colorsets/blue.xml</include>   
   <include subset="MainBGColor" name="Purple" displayName="${huepurple}">./colorsets/purple.xml</include>

   <variables> 
	   <subset.MainBGColor>Main Background Color</subset.MainBGColor> 
   </variables>

	<view name="menu">
		<menuText name="menutitle">
			<fontPath>./_inc/fonts/OpenSans-Semibold.ttf</fontPath>
			<fontSize>0.05</fontSize>
			<color>fe0303</color>
		</menuText>
		<menuText name="menufooter">
			<fontPath>./_inc/fonts/Circular Std Book.ttf</fontPath>
			<fontSize>0.04</fontSize>
			<color>fe0303</color>
		</menuText>
		<menuText name="menutext">
			<fontPath>./_inc/fonts/OpenSans-Semibold.ttf</fontPath>
			<fontSize>0.035</fontSize>
			<color>868686</color>
			<separatorColor>191919</separatorColor>
			<selectorColor>0b0102</selectorColor>
			<selectorColorEnd>f60915</selectorColorEnd>
			<selectedColor>FFFFFF</selectedColor>
			<selectorGradientType>horizontal</selectorGradientType>
		</menuText>
		<menuTextSmall name="menutextsmall">
			<fontPath>./assets/Circular Std Book.ttf</fontPath>
			<fontSize>0.025</fontSize>
			<color>e0343d</color>
		</menuTextSmall>
		<menuBackground name="menubg">
			<color>0a0b0c</color>
			<cornerSize>32 32</cornerSize>
			<path>./_inc/frame.png</path>
		</menuBackground>
		<menuIcons name="menuicons">
			<iconKodi>./_inc/icons/Kodi.png</iconKodi>
			<iconSystem>./_inc/icons/System.png</iconSystem>
			<iconUpdates>./_inc/icons/Updates.png</iconUpdates>
			<iconGames>./_inc/icons/Games.png</iconGames>
			<iconControllers>./_inc/icons/Controllers.png</iconControllers>
			<iconUI>./_inc/icons/UI.png</iconUI>
			<iconSound>./_inc/icons/Sound.png</iconSound>
			<iconNetwork>./_inc/icons/Network.png</iconNetwork>
			<iconScraper>./_inc/icons/Scraper.png</iconScraper>
			<iconAdvanced>./_inc/icons/Advanced.png</iconAdvanced>
			<iconQuit>./_inc/icons/Quit.png</iconQuit>
			<iconRestart>./_inc/icons/Restart.png</iconRestart>
			<iconShutdown>./_inc/icons/Shutdown.png</iconShutdown>
			<iconFastShutdown>./_inc/icons/Fastshutdown.png</iconFastShutdown>
			<iconRetroachievements>./_inc/icons/Contest.png</iconRetroachievements>
		</menuIcons>
		<menuTextEdit name="menutextedit">
			<inactive>./_inc/textinput_ninepatch.png</inactive>
			<active>./_inc/textinput_ninepatch_active.png</active>
		</menuTextEdit>

		<helpsystem name="help">
			<fontPath>./assets/Circular Std Book.ttf</fontPath>
			<fontSize>0.022</fontSize>     
			<pos>0.06 0.955</pos>      
			<textColor>FFFFFF</textColor>
		</helpsystem>
	</view> 

	<view name="grid">
		<image name="logo">
			<!-- try png -->
			<path>./assets/logos/${system.theme}.png</path>
			<!-- if system2 exists, take this version -->
			<path>./${system.theme}/art/system2.svg</path>
			<!--<pos>0.02 0.12</pos><maxSize>0.34 0.16</maxSize>-->
			<pos>0.02 0.12</pos>
			<maxSize>0.34 0.16</maxSize>
			<origin>0 0</origin>
			<zIndex>4</zIndex>
		</image>

		<helpsystem name="help">
			<fontPath>./_inc/fonts/OpenSans-Semibold.ttf</fontPath>
			<fontSize>0.017</fontSize>
			<pos>0.02 0.955</pos>
			<textColor>FFFFFF</textColor>
		</helpsystem>

		<image name="md_image">
			<tile>true</tile>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
			<zIndex>0</zIndex>
		</image>
		<image name="art" extra="true">
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
			<path>./assets/arts/$system.jpg</path>
			<zIndex>2</zIndex>
		</image>
		<image name="art2" extra="true">
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
			<path>./assets/filter4.png</path>
			<zIndex>5</zIndex>
		</image>
		<text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount">
			<color>A0A0B000</color>
			<fontPath>./_inc/fonts/Homizio.ttf</fontPath>
		</text>
		<text name="md_developer, md_publisher, md_genre, md_players, md_playcount, md_description">
			<color>ffffff00</color>
			<fontPath>./_inc/fonts/Homizio.ttf</fontPath>
		</text>
		<datetime name="md_releasedate, md_lastplayed">
			<color>ffffff00</color>
			<fontPath>./_inc/fonts/Homizio.ttf</fontPath>
		</datetime>
		<rating name="md_rating">
			<pos>0.88 0.88</pos>
			<size>0.05 0.03</size>
			<color>FFFFFF</color>
			<unfilledColor>808080</unfilledColor>
			<fontPath>./_inc/fonts/Homizio.ttf</fontPath>
		</rating>
		<imagegrid name="gamegrid">
			<pos>0.025 0.16</pos>
			<size>0.950 0.774</size>
			<margin>0.005 0.010</margin>
			<padding>0.03 0.05 0.03 0.04</padding>
			<autoLayout>5 2</autoLayout>
			<autoLayoutSelectedZoom>1.12</autoLayoutSelectedZoom>
			<animateSelection>false</animateSelection>
		</imagegrid>
		<gridtile name="default">
			<backgroundColor>FFFFFF00</backgroundColor>
			<backgroundCornerSize>9 9</backgroundCornerSize>
			<selectionMode>image</selectionMode>
			<padding>5 5</padding>
			<imageColor>FFFFFFB0</imageColor>
		</gridtile>
		<gridtile name="selected">
			<backgroundCenterColor>0b0102</backgroundCenterColor>
			<backgroundEdgeColor>f60915</backgroundEdgeColor>
			<imageColor>FFFFFFFF</imageColor>
		</gridtile>
		<text name="gridtile">
			<color>D0D0D0</color>
			<backgroundColor>00000000</backgroundColor>
			<fontSize>0.022</fontSize>
			<alignment>center</alignment>
			<size>1 0.24</size>
		</text>
		<text name="gridtile_selected">
			<color>FFFFFF</color>
			<glowColor>00000016</glowColor>
			<glowSize>3</glowSize>
		</text>

		<text name="md_name">
			<fontPath>./_inc/fonts/Homizio.ttf</fontPath>
		</text>
	</view>
 
   <customView name="Boxes" inherits="grid" displayName="${basicGridName}">
      <imagegrid name="gamegrid">
         <autoLayout>6 2</autoLayout>
         <autoLayoutSelectedZoom>1.08</autoLayoutSelectedZoom>
      </imagegrid>
      <text name="gridtile">
         <visible>false</visible>
      </text>
      <image name="gridtile.favorite">
         <path>./_inc/gridfav.png</path>
         <pos>0.75 0</pos>
         <maxSize>0.25 0.25</maxSize>
         <!-- <horizontalAlignment>right</horizontalAlignment> -->
         <origin>0 0</origin>
         <color>A0A0A0A0</color>
      </image>
      <image name="gridtile.favorite:selected">
         <path>./_inc/gridfav.png</path>
         <color>f60915</color>
      </image>
   </customView>
   
   <customView name="Boxes + Video" inherits="Boxes" displayName="${basicGridVideoName}">
      <imagegrid name="gamegrid">
         <showVideoAtDelay>800</showVideoAtDelay>
         <padding>0.04 0.03 0.04 0.03</padding>
         <margin>0.003 0.003</margin>
      </imagegrid>
      <gridtile name="default">
         <padding>2 2</padding>
         <backgroundCornerSize>0 0</backgroundCornerSize>
         <imageSizeMode>minSize</imageSizeMode>
      </gridtile>
   </customView>
   
   <customView name="Boxes + details" inherits="Boxes" displayName="${basicGridDetailsName}">
      <imagegrid name="gamegrid">
         <pos>0 0.16</pos>
         <size>0.66 0.774</size>
         <autoLayoutSelectedZoom>1.08</autoLayoutSelectedZoom>
         <autoLayout>4 2</autoLayout>
      </imagegrid>
      <image name="gamelistBackground" extra="true">
         <path>./art/filter4.png</path>
         <color>606060FF</color>
         <origin>0 0</origin>
         <pos>0.66 0.16</pos>
         <size>0.34 0.774</size>
         <zIndex>12</zIndex>
      </image>
      <image name="md_image">
         <visible>false</visible>
      </image>
      <text name="md_name">
         <color>ffffffff</color>
         <pos>0.67 0.188</pos>
         <size>0.30 0.05</size>
         <color>F0F0F0</color>
         <fontSize>0.042</fontSize>
         <fontPath>./assets/Circular Std Black.ttf</fontPath>
         <alignment>center</alignment>
         <glowColor>00000016</glowColor>
         <glowSize>2</glowSize>
      </text>
      <text name="md_developer">
         <color>EFEFFF</color>
         <pos>0.68 0.875</pos>
         <size>0.22 0.05</size>
         <alignment>left</alignment>
         <fontSize>0.025</fontSize>
      </text>
      <video name="md_video">
         <pos>0.82 0.450</pos>
         <minSize>0.29 0.39</minSize>
         <origin>0.5 0.5</origin>
         <delay>1</delay>
         <showSnapshotNoVideo>true</showSnapshotNoVideo>
         <showSnapshotDelay>true</showSnapshotDelay>
      </video>
      <image name="tv_overlay" extra="true">
         <pos>0.68 0.25</pos>
         <size>0.30 0.40</size>
         <path>./art/tv.png</path>
         <zIndex>140</zIndex>
      </image>
      <text name="md_description">
         <pos>0.68 0.678</pos>
         <size>0.30 0.20</size>
         <fontSize>0.025</fontSize>
         <color>FFFFFF</color>
         <glowColor>00000016</glowColor>
         <glowSize>1</glowSize>
      </text>
      <text name="md_rating">
         <pos>0.9 0.886</pos>
         <size>0.05 0.03</size>
      </text>
   </customView>
  
</theme>