<theme>
<formatVersion>7</formatVersion>
	<view name="system">

		<image name="art" extra="true">
			<size>1 1</size>
			<pos>0 0</pos>
			<origin>0 0</origin>
		</image> 	

		<image name="logo">
			<path>./../assets/logos/$system.png</path>
		</image>

		<image name="background" extra="true">
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
			<path>./../assets/overlay1222.png</path>
			<zIndex>41</zIndex>
		</image>

		<video name="md_video" extra="true">
			<path>{random}</path> 
			<pos>0.025 0.62</pos>
			<maxSize>0.30 0.30</maxSize>
			<origin>0 0</origin>
			<delay>0.2</delay>
			<showSnapshotNoVideo>false</showSnapshotNoVideo>
			<showSnapshotDelay>false</showSnapshotDelay>
			<zIndex>50</zIndex>
		</video>

		<text name="info1" extra="true">
			<fontPath>./../assets/Circular Std Book.ttf</fontPath>
			<color>FFFFFF</color>
			<alignment>left</alignment>
			<fontSize>0.030</fontSize>
			<lineSpacing>1</lineSpacing>
			<size>0.35 0</size>
			<pos>0.02 0.3</pos>
			<glowColor>00000016</glowColor>
			<glowSize>1</glowSize>
			<zIndex>42</zIndex>
		  </text>	

		<text name="info2" extra="true">
			<fontPath>./../assets/Circular Std Black.ttf</fontPath>
			<color>fe0303</color>
			<alignment>left</alignment>
			<fontSize>0.05</fontSize>
			<lineSpacing>1</lineSpacing>
			<size>0.45 0.35</size>
			<pos>0.02 0.0001</pos>
			<glowColor>00000016</glowColor>
			<glowSize>2</glowSize>
			<zIndex>42</zIndex>
		  </text>

		<text name="info3" extra="true">
			<fontPath>./../assets/Circular Std Black.ttf</fontPath>
			<color>FFFFFF</color>
			<alignment>left</alignment>
			<fontSize>0.023</fontSize>
			<lineSpacing>1</lineSpacing>
			<size>0.35 0</size>
			<pos>0.02 0.22</pos>
			<glowColor>00000016</glowColor>
			<glowSize>1</glowSize>
			<zIndex>42</zIndex>
		  </text>

		<text name="info4" extra="true">
			<fontPath>./../assets/Circular Std Book.ttf</fontPath>
			<color>5c5b5c</color>
			<alignment>left</alignment>
			<fontSize>0.023</fontSize>
			<lineSpacing>1</lineSpacing>
			<size>0.35 0</size>
			<pos>0.08 0.22</pos>
			<glowColor>00000016</glowColor>
			<glowSize>1</glowSize>
			<zIndex>42</zIndex>
		  </text>

		<carousel name="systemcarousel">
			<type>vertical</type>
			<pos>0 0</pos>
			<size>1 1</size>
			<origin>0 0</origin>
			<color>00000000</color>
			<logoScale>1.3</logoScale>
			<logoSize>0.2 0.2</logoSize>
			<logoAlignment>right</logoAlignment>
			<maxLogoCount>5</maxLogoCount>
			<defaultTransition>instant</defaultTransition>	
			<zIndex>50</zIndex>
		</carousel>

		<text name="systemInfo">
			<pos>-0.428 0.556</pos>
			 <alignment>center</alignment>
			 <fontPath>./../assets/Circular Std Black.ttf</fontPath>
			 <fontSize>0.0250</fontSize>
			 <color>FFFFFF</color>
		</text>

		<helpsystem name="help">
			<textColor>FFFFFF</textColor>
		</helpsystem>


		<text name="info5" extra="true">
			<text>MANUFACTURER:</text>
